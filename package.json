{
  "name": "pure-ts-mock",
  "type": "module",
  "version": "0.10.2",
  "description": "A minimalist, type-safe mocking library for TypeScript. Expressive, framework-agnostic, and dependency-free.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "pnpm build && vitest run",
    "coverage": "pnpm build && vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "3.2.4",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4",
    "tsup": "^8.5.0"
  },
  "keywords": [
    "typescript",
    "mock",
    "testing",
    "type-safe",
    "minimal",
    "framework-agnostic"
  ],
  "author": "Alessio Coser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alessiocoser/pure-ts-mock.git"
  },
  "bugs": {
    "url": "https://github.com/alessiocoser/pure-ts-mock/issues"
  },
  "homepage": "https://github.com/alessiocoser/pure-ts-mock#readme"
}
